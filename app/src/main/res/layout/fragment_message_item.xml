<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:elevation="100dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="@dimen/_16dp"
    android:layout_marginLeft="@dimen/_16dp"
    android:layout_marginRight="@dimen/_16dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:padding="@dimen/_10dp"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

        <com.ryan.ryanapp.ui.customeview.CircleImageView
            android:src="@drawable/naruto"
            android:layout_width="@dimen/_56dp"
            android:id="@+id/headImageView"
            app:border_width="@dimen/_2dp"
            app:border_color="@color/activity_background"
            android:layout_height="@dimen/_56dp"/>

        <TextView
            android:layout_centerVertical="true"
            android:text="nickname"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_toRightOf="@id/headImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nicknameView"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>


