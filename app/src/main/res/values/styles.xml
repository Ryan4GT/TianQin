<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--  Toolbar背景颜色   -->
        <item name="colorPrimary">@color/theme_color</item>
        <!--  应用中的字体默认颜色  -->
        <item name="android:textColor">@color/black</item>
        <!--  Toolbar的标题颜色值  -->
        <item name="android:textColorPrimary">@color/theme_color</item>
        <!--  Toolbar的选项菜单的颜色值  -->
        <item name="actionMenuTextColor">@color/white</item>
    </style>


    <style name="ProgressBarSmall" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custome_progressbar</item>
        <item name="android:minWidth">20dip</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">500</item>
    </style>

</resources>
